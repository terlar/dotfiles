[user]
  name = Terje Larsen
  email = terlar@gmail.com
[core]
  excludesfile = ~/.gitignore
[alias]
  subpull  = submodule foreach git pull
  unstage  = reset HEAD
  uncommit = reset --soft HEAD^
  recommit = commit --amend

  cp  = cherry-pick
  st  = status -sb
  ci  = commit -v
  cim = commit -v -m
  co  = checkout
  fa  = fetch --all

  di  = diff
  dt  = difftool
  dc  = diff --cached
  dw  = diff --color-words
  ds  = diff --stat
  wc  = whatchanged -p --abbrev-commit --pretty=medium

  # Logging
  l      = log --graph --decorate --pretty=format:\"%C(yellow)%h%C(reset)%C(bold)%d%C(reset) %s %C(yellow)(%C(cyan)%ar%C(yellow), %C(blue)%an%C(yellow))%C(reset)\"
  ll     = log --graph --decorate --stat --pretty=format:\"%C(yellow)%h%C(reset)%C(bold)%d%C(reset) %s%n %C(cyan)%ar%C(reset), %C(blue)%an%C(reset)%n\"
  head   = !git ll -1
  h      = !git head
  recent = !git ll -30
  r      = !git recent
[pager]
  color = true
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[merge]
  tool = vimdiff
[mergetool]
  keepBackup = false
  prompt = false
[branch]
  autosetuprebase = always
[branch "master"]
  rebase = true
[push]
  default = upstream
[github]
  user = terlar
[url "git://github.com/"]
  # Read-only
  insteadOf = gh:
[url "git@github.com:"]
  # With write access
  insteadOf = wgh:
