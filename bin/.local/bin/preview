#!/usr/bin/env bash
has_cmd() {
	local cmd="$@"
	if command -v $cmd >/dev/null; then
		return 0
	else
		return 1
	fi
}

main() {
	local no_browser

	while true ; do
		case "$1" in
			-n)
				no_browser=1
				shift 1
			;;
			*)
				break
			;;
		esac
	done

	local file="$*"
	local cmd

	case "$file" in
		*.rst)
			has_cmd rst2html && cmd=rst2html
			has_cmd rst2html2 && cmd=rst2html2
			has_cmd pandoc && cmd='pandoc -s'
			;;
		*.md)
			has_cmd marked && cmd='marked'
			has_cmd pandoc && cmd='pandoc -s'
			;;
		*.html)
			cmd='cat'
			;;
	esac

	if [[ -z "$cmd" ]]; then
		cmd='awk 1 ORS="<br>"'
	fi

	if [[ "$no_browser" = 1 ]] ; then
		eval $cmd "'$file'"
	else
		eval $cmd "'$file'" | browser
	fi
}

main "$@"
