#!/usr/bin/env bash
[[ "${TRACE}" ]] && set -x
set -eu
set -o pipefail

main() {
	local content=/dev/stdin

	if [[ -f "$*" ]]; then
		content="$*"; shift
	fi

	local ext="$*"

	if [[ -z "$ext" ]] && [[ "$content" == *.* ]]; then
		ext="${content##*.}"
	fi

	read -r link < <(curl -# -F 'sprunge=<-' http://sprunge.us < "$content")

	local link="$link?$ext"

	[[ -n "$DISPLAY" ]] && echo -n "$link" | xclip
	printf "%s\n" "$link"
}

main "$@"
