#!/usr/bin/env bash
if [ $# -eq 0 ]; then
	if [ -z "$TMUX" ]; then
		exec tmux attach || tmux new
	else
		exec tmux choose-session
	fi
else
	session_name="$1"
	shift 1

	flags=()

	while true ; do
		case "$1" in
			-c|-F|-n|-x|-y)
				flags+=($1 "$2")
				shift 2
			;;
			*)
				break
			;;
		esac
	done

	_command=$@

	tmux start-server > /dev/null 2>&1

	if [ -z "$TMUX" ]; then
		exec tmux new -A -s "$session_name" ${flags[@]} $_command
	else
		if ! tmux list-sessions | grep -q "^$session_name:"; then
			TMUX= tmux new -d -s "$session_name" ${flags[@]} $_command
		fi

		exec tmux switch -t "$session_name"
	fi
fi
