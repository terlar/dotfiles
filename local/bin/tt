#!/usr/bin/env bash
current_time=$(timetrap t 2>/dev/null | grep Total | rev | cut -d' ' -f1 | rev)
if [ -z "$current_time" ]; then
	echo -e '??:??'
	exit 1
fi
hours=$(echo $current_time | cut -d':' -f1)

if [ $hours -eq 7 ]; then
	echo -ne '\e[33;7;1m'
elif [ $hours -eq 8 ]; then
	echo -ne '\e[32;7;1m'
else
	echo -ne '\e[31;7;1m'
fi

echo $current_time | cut -d':' -f1-2
echo -ne '\e[0m'
