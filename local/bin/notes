#!/usr/bin/env bash
main() {
	local flags=()

	while true ; do
		case "$1" in
			-n)
				flags+=(-n)
				shift 1
			;;
			*)
				break
			;;
		esac
	done

	local dir=${NOTES:=$HOME/notes}

	local oldifs fileArray fileArrayLen

	local oldifs=$IFS
	IFS=$'\n'
	local fileArray=($(grep -lr "$@" $dir))
	IFS=$oldifs
	local fileArrayLen=${#fileArray[@]}

	for (( i=0; i < ${fileArrayLen}; i++ )); do
		echo "${fileArray[$i]}"
		preview ${flags[@]} "${fileArray[$i]}"
	done
}

main "$@"
