# Paths
set folder = ~/mail
set header_cache = ~/.mutt/cache
set mailcap_path = ~/.mutt/mailcap
set signature = ~/.mutt/signature
set tmpdir = ~/.mutt/temp

# Options
unset wait_key
set beep_new
unset confirmappend
set delete
set editor = "nvim +:silent+?^$"
set query_command = "ppl mutt '%s'"
set ispell = "aspell -e -c"
set mail_check = 0
unset move
unset mark_old
set mbox_type = Maildir
set pipe_decode
unset record
set spoolfile = "+personal/inbox"
set strict_threads
set thorough_search
set timeout = 3

# Header
ignore *
unignore from: to: cc: date: subject:
hdr_order from: to: cc: date: subject:

# Status Bar
set status_chars  = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

# Index View
unset arrow_cursor
set date_format = "%m/%d"
set index_format = "%3C %Z %[!%m/%d] %-17.17F %s"
set sort = threads
set sort_aux = reverse-last-date-received
set uncollapse_jump
unset sort_re
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"

# Pager View
set menu_scroll
set pager_context = 5
set pager_index_lines = 10
set pager_stop
set tilde
unset markers

set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
auto_view text/html
alternative_order text/plain text/enriched text/html

# Compose View
set realname = "Terje Larsen"
set envelope_from
set sig_dashes
set edit_headers
set fast_reply
set askcc
set fcc_attach
unset mime_forward
set forward_format = "Fwd: %s"
set forward_decode
set forward_quote
set attribution = "On %d, %n wrote:"
set reply_to
set reverse_name
set include


source ~/.mutt/colors
source ~/.mutt/mailboxes
source ~/.mutt/bindings
source ~/.mutt/macros
source ~/.mutt/gpg
source ~/.mutt/hooks
