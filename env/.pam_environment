# FZF
FZF_TMUX              DEFAULT=1
FZF_DEFAULT_COMMAND   DEFAULT="rg --files --no-ignore --hidden --follow --glob '!.git/*'"
FZF_DEFAULT_OPTS      DEFAULT="--reverse --border"
