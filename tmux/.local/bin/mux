#!/usr/bin/env bash
set -e
set -o pipefail

unnamed_session() {
	if [[ -z "${TMUX}" ]]
	then
		exec tmux attach || exec tmux new
	else
		exec tmux choose-session
	fi
}

named_session() {
	local attach=1
	local flags=()
	local session_name="$1"
	shift 1

	while true
	do
		case "$1" in
			-d)
				attach=0
				shift 1
				;;
			-c|-n|-x|-y|-E)
				flags+=("$1" "$2")
				shift 2
				;;
			*)
				break
				;;
		esac
	done

	if ! tmux has-session -t "${session_name}" &>/dev/null
	then
		tmux new-session -d -s "${session_name}" \
			"${flags[@]}" \
			-- "$@"
	fi

	if [[ "${attach}" = "1" ]]
	then

		if [[ -z "${TMUX}" ]]
		then
			exec tmux attach-session -t "${session_name}"
		else

			exec tmux switch-client -t "${session_name}"
		fi
	fi
}

main() {
	if [[ "$#" -eq 0 ]]
	then
		unnamed_session
	else
		named_session "$@"
	fi
}

main "$@"
