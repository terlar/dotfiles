source 'https://rubygems.org'

group :tools do
  gem 'ppl'      # Adress book
  gem 'timetrap' # Time tracking
end

group :development do
  gem 'awesome_print'       # Improved inspect output
  gem 'fastri'              # RI alternative
  gem 'gem-man'             # Man for gems
  gem 'method_source'       # Method source code
  gem 'pry'                 # Interactive shell
  gem 'pry-byebug'          # Debugger
  gem 'pry-doc'             # Documentation lookup
  gem 'rack'                # Web server
  gem 'rcodetools'          # Code manipulation tools
  gem 'rspec'               # Test framework
  gem 'rubocop'             # Code analyzer
  gem 'seeing_is_believing' # Code evaluation
  gem 'slim'                # Slim template language
  gem 'yard'                # Documentation
end
