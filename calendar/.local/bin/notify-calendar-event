#!/usr/bin/env bash
agenda() {
	khal list today tomorrow \
		| grep '^[0-9][0-9]:[0-9][0-9]-[0-9][0-9]:[0-9][0-9] '
}

is_within_notify_time() {
	local time="$1"
	local range="$2"

	now_ts=$(date '+%s')
	event_ts=$(date -d "$time" '+%s')
	alert_ts=$(( event_ts - range ))

	[[ "$now_ts" -lt "$event_ts" ]] && [[ "$now_ts" -gt "$alert_ts" ]]
}

get_time_remaining() {
	local time="$1"

	now_ts=$(date '+%s')
	event_ts=$(date -d "$time" '+%s')
	remaining=$((event_ts - now_ts))

	humanize_seconds "$remaining"
}

humanize_seconds() {
	local time="$1"
	local h m s

	(( h=time / 3600 ))
	(( m=(time % 3600) / 60 ))
	(( s=time % 60 ))

	if [[ "$h" -gt 0 ]]; then
		echo -n "${m} hours"
	elif [[ "$m" -gt 0 ]]; then
		echo -n "${m} minutes"
	elif [[ "$s" -gt 0 ]]; then
		echo -n "${s} seconds"
	fi
}

main() {
	local time start_time message

	agenda | while read -r event; do
		time=$(echo "$event" | cut -d ' ' -f 1)
		start_time=$(echo "$time" | cut -d '-' -f 1)
		message=$(echo "$event" | cut -d ' ' -f 2-)

		is_within_notify_time "$start_time" 900 || continue

		remaining=$(get_time_remaining "$start_time")

		notify-send -i appointment-soon \
			"$message" \
			"$time\nin ${remaining}"
	done
}

main "$@"
