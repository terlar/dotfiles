#!/usr/bin/env bash
[[ "${TRACE}" ]] && set -x
set -eu
set -o pipefail

has_display() {
	[[ -n "$DISPLAY" ]]
}

main() {
	if has_display; then
		cat "$HOME/.config/termite/config_bright" > "$HOME/.config/termite/config"
		killall -USR1 termite >/dev/null

		cat "$HOME/.config/alacritty/alacritty-bright.yml" > "$HOME/.config/alacritty/alacritty.yml"
	else
		"$HOME/.vconsole_bright"
		clear
	fi
}

main
