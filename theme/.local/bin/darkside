#!/usr/bin/env bash
[[ "${TRACE}" ]] && set -x
set -eu
set -o pipefail

has_display() {
	[[ -n "$DISPLAY" ]]
}

main() {
	if has_display; then
		cat "$HOME/.config/termite/config_dark" > "$HOME/.config/termite/config"
		killall -USR1 termite

		cat "$HOME/.config/alacritty/alacritty-dark.yml" > "$HOME/.config/alacritty/alacritty.yml"
	else
		"$HOME/.vconsole_dark"
		clear
	fi
}

main
