#!/bin/bash
set -eu
set -o pipefail

has_cmd() {
	if command -v -- "$*" &>/dev/null
	then
		return 0
	else
		return 1
	fi
}

is_graphical() {
	[[ -n "${DISPLAY:-}" ]]
}

is_interactive() {
	local fd=0 # stdin
	[[ -t "${fd}" || -p /dev/stdin ]]
}

use_rofi() {
	has_cmd 'rofi' && is_graphical
}

main() {
	local menu_cmd="${1?menu command was not provided}"

	if ! has_cmd 'rofi' && ! has_cmd 'fzf'
	then
		echo 'you need either rofi or fzf for the menu' 1>&2
	fi

	if ! has_cmd "${menu_cmd}"
	then
		echo "unknown command \`${menu_cmd}'" 1>&2
	fi

	if use_rofi
	then
		local modi
		modi="$(echo "$*" | sed -r 's/(\S+)/\1:\1/g; s/\s/,/g')"
		rofi -modi "${modi}" -show "${menu_cmd}"
	else
		local sel=""

		while :
		do
			sel="$("${menu_cmd}" "${sel}" | fzf -0; true)"
			[[ -n "${sel}" ]] || break
		done
	fi
}

main "$@"
